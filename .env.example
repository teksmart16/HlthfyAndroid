# Chot Delivery Service Configuration
# Copy this file to .env and fill in your actual credentials

# Chot API Base URL
CHOT_API_BASE=https://api.chot.app/v1

# Chot API Key (get from Chot Dashboard)
CHOT_API_KEY=your_chot_api_key_here

# Merchant ID (get from Chot Dashboard)
CHOT_MERCHANT_ID=your_merchant_id_here

# Webhook URL for delivery updates (optional)
WEBHOOK_URL=https://yourdomain.com/webhooks/delivery

# Fallback delivery fee (in rupees) if API is unavailable
FALLBACK_DELIVERY_FEE=50

# Maximum delivery radius (in km)
MAX_DELIVERY_RADIUS=25
